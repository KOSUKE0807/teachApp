<h2 class="msg-form-title">メッセージ追加</h2>
<div class="f-wrapper">
    <%= form_for @message do |f| %>
        <div class="form-group">
            <%= f.label :student_id, "student" %>
            <%= f.collection_select :student_id, Student.all, :id, :name, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :detail %>
            <%= f.text_area :detail, class: "form-control", rows: 10 %>
        </div>
        <div class="form-group">
            <%= f.label :date %>
            <%= f.date_select :date, {}, class: 'fform-control' %>
        </div>
        
        <%= f.submit "送信", class: "btn btn-outline-dark" %>
        
    <% end %>
</div>
